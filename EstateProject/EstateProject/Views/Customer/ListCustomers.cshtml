
@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
                    try {
                        ace.settings.check('breadcrumbs', 'fixed')
                    } catch (e) {
                    }
        </script>
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="../index1.html">
                    Trang chủ
                </a>
            </li>
            <li>
                <a href="">
                    Quản lý khách hàng
                </a>
            </li>
            <li class="active">
                Danh sách khách hàng
            </li>
        </ul><!-- /.breadcrumb -->
    </div>

    <div class="page-content">
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                    <div class="col-xs-12">
                        <div class="widget-box table-filter">
                            <div class="widget-header">
                                <h4 class="widget-title" style="font-family: VnBlack">
                                    Tìm kiếm
                                </h4>
                                <div class="widget-toolbar">
                                    <a href="#" data-action="collapse">
                                        <i class="ace-icon fa fa-chevron-up"></i>
                                    </a>
                                </div>
                            </div>
                            <form id="listFormCustomer" method="GET">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <div class="form-horizontal">
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <label for="fullName">Tên khách hàng</label>
                                                    <input type="text" class="form-control" id="fullName" />
                                                </div>
                                                <div class="col-sm-4">
                                                    <label for="phone">Di động  </label>
                                                    <input type="text" class="form-control" id="phone" />

                                                </div>
                                                <div class="col-sm-4">
                                                    <label for="email">Email </label>
                                                    <input type="text" class="form-control" id="email" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <label for="staffId" style="width: 500px;"> Nhân viên phụ trách</label>
                                                    <select id="staffId" style=" margin-top: -2px;width: 405px;">
                                                        <option value=""> &#45;&#45; Chọn nhân viên phụ trách &#45;&#45; </option>

                                                    </select>
                                                </div>
                                                <div class="col-sm-6">
                                                    <label class="col-sm-2 control-label"></label>
                                                    <button id="btnSearchCustomer" type="button"
                                                            class="btn btn-sm btn-success" style="float: right; margin-top: 24px;">
                                                        Tìm kiếm
                                                        <i class="ace-icon fa fa-arrow-right icon-on-right bigger-110"></i>
                                                    </button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="table-btn-controls">

                                <!-- Nếu role = Manager thì show-->
                                <div class="pull-right tableTools-container" style="margin-top: 8px;">
                                    <div class="dt-buttons btn-overlap btn-group">
                                        <a flag="info" href="edit.html"
                                           class="dt-button buttons-colvis btn btn-white btn-primary btn-bold"
                                           data-toggle="tooltip" title="Thêm người dùng">
                                            <span>
                                                <i class="fa fa-plus-circle bigger-110 purple"></i>
                                            </span>
                                        </a>
                                        <button id="btnDelete" type="button" disabled style="margin-left: 6px;"
                                                class="dt-button buttons-html5 btn btn-white btn-primary btn-bold"
                                                data-toggle="tooltip"
                                                title="Xóa bài viết" onclick="warningBeforeDeleteCustomer()">
                                            <span>
                                                <i class="fa fa-trash-o bigger-110 pink"></i>
                                            </span>
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="table-responsive">
                                    <table id="buildingList" class="table  table-bordered ">
                                        <thead>
                                            <tr style="font-family: VnBlack ; font-weight: bold; color: #000000;">
                                                <th><input type="checkbox" id="checkAll" value="#" /></th>
                                                <th>Tên  </th>
                                                <th>Nhân viên quản lý</th>
                                                <th>Di động</th>
                                                <th>Email</th>
                                                <th>Nhu cầu</th>
                                                <th>Người nhập</th>
                                                <th>Ngày nhập </th>
                                                <th>Tình trạng </th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td> <input type="checkbox" /></td>
                                                <td>fullName</td>
                                                <td>staffName</td>
                                                <td>phone</td>
                                                <td>email</td>
                                                <td>demand</td>
                                                <td>createdBy</td>
                                                <td>createdDate</td>
                                                <td>status</td>
                                                <td>
                                                    <!-- Nếu là MANAGER thì mới hiện giao tòa nhà -->
                                                    <button class="btn btn-xs btn-primary" data-toggle="tooltip" data-placement="bottom"
                                                            title="Giao tòa nhà cho nhân viên" onclick="assignmentCustomer()">
                                                        <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                    </button>
                                                    <!-- end -->
                                                    <a class="btn btn-xs btn-primary " data-toggle="tooltip"
                                                       title="Cập nhật bài viết" /><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td> <input type="checkbox" /></td>
                                                <td>fullName</td>
                                                <td>staffName</td>
                                                <td>phone</td>
                                                <td>email</td>
                                                <td>demand</td>
                                                <td>createdBy</td>
                                                <td>createdDate</td>
                                                <td>status</td>
                                                <td>
                                                    <!-- Nếu là MANAGER thì mới hiện giao tòa nhà -->
                                                    <button class="btn btn-xs btn-primary" data-toggle="tooltip" data-placement="bottom"
                                                            title="Giao tòa nhà cho nhân viên" onclick="assignmentCustomer()">
                                                        <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                    </button>
                                                    <!-- end -->
                                                    <a class="btn btn-xs btn-primary " data-toggle="tooltip"
                                                       title="Cập nhật bài viết" /><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table> <!-- table-->
                                    <ul class="pagination" id="pagination"></ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

